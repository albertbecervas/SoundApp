<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abecerra.soundapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".scenes.launcher.view.LauncherActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".scenes.main.view.MainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/FullScreenTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".scenes.player.SongPlayerActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".scenes.main.view.MainActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>